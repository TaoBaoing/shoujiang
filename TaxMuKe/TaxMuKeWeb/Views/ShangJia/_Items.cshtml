@model IPagedList<BasicData.Domain.ShangJia>
    @{
        Layout = "~/Views/Shared/_ItemsPartialLayout.cshtml";
    }

    @section Head
{
        <th>ID</th>
        <th>商家名称</th>
        <th>LOGO</th>
        <th>登录名</th>
        <th>登录密码</th>
        <th class="align-center">操作</th>
    }

    @section Items
{
        @foreach (var item in Model)
    {
            <tr class="hover">
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.ImageUrl</td>
                <td>@item.UserName</td>
                <td>@item.UserPwd</td>
       
            <td class="w270 align-center">

                <a class="edit" href="/ShangJia/FormForUpdate?id=@item.Id">修改</a> |
                <a class="edit" href="javascript:confirmDelete('/ShangJia/Remove','id=@item.Id',showSubmitResult)">删除</a>
            </td>
        </tr>
        }
    }
