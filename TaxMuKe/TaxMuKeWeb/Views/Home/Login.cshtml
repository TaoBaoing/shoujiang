@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="UPMS" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/Assets/Css/login/signup.css" type="text/css" media="screen">
    <style type="text/css">
        #tip {position: relative;height: 40px;line-height: 40px;}
        #tip .Reminder {position: absolute;top: 0;left: -100px;width: 200px;height: 150px;background-color: green;}
    </style>
    <script src="~/Assets/Plugins/jquery/jquery-1.11.1.min.js"></script>
</head>
<body screen_capture_injected="true">
@*   @Ajax.BeginForm("Login",new AjaxOptions() {OnFailure = "alert('用户名或密码错误')" })*@
@using (Ajax.BeginForm("Login", new AjaxOptions() {HttpMethod = "POST"} ))
{
    @Html.AntiForgeryToken()

    <div class="wrapper" id="login">
        <div class="header">
            <h1></h1>
@*            <a href="/"><img src="/Assets/images/login/admin_logo.png" class="logo png"></a>*@
        </div>

        <div id="loginBoxShadow" class="png">
            <div id="loginBox" class="png">
                <span class="beta png"></span>
                <div class="form">
                    <div class="input-item">
                        <label for="username">用户名...</label>
                        <input id="username" name="name" class="text-input" type="text" value="" maxlength="150">
                    </div>
                    <div class="input-item">
                        <label for="password">密码...</label>
                        <input id="password" name="password" class="text-input" type="password" value="" maxlength="80">
                    </div>
                    <div class="login-item">
                        <input type="submit" class="btn png" value="">
                    </div>
                </div>
            </div>
        </div>

        <div id="footer">
            <p id="copyright" class="txt-c sign">
@*                <span>Copyright © 2016 燕园财税</span>*@
                @*                    <a href="javascript:" target="_blank">网站首页</a>&nbsp;&nbsp;<a href="javascript:" target="_blank">关于我们</a>*@
            </p>
        </div>
    </div>
}
@*<form method="post">*@
@*      *@
@**@
@*    </form>*@

    <script type="text/javascript" src="/Assets/Plugins/jquery/jquery-1.11.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            setTimeout(function () {
                $(".error").fadeOut();
            }, 1500);

            $(function timerFun() {
                setTimeout(function () {
                    if ($("#password").val() != "") {
                        $("#password").prev().hide();
                    }
                    if ($("#username").val() != "") {
                        $("#username").prev().hide();
                    }
                    timerFun();
                }, 60);
            });

            $(".input-item .text-input").focus(function () { $(this).prev().hide(); })
                    .blur(function () {
                        if ($(this).val() == "") {
                            $(this).prev().show();
                        }
                    });

            if ($(".error").length > 0 || $("#username").val() != "") {
                $("#username").prev().hide();
            }
            if ($("#password").val() != "") {
                $("#password").prev().hide();
            }
        });
    </script>

</body>
</html>
