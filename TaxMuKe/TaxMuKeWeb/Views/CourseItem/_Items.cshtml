@model IPagedList<MuKeCourseCapter>
@{
    Layout = "~/Views/Shared/_ItemsPartialLayout.cshtml";
}

@section Head
{
    <th>ID</th>
    <th>标题</th>
    <th>状态</th>
    <th>时长</th>
    <th>点击数</th>
    <th class="align-center">操作</th>
}

@section Items
{
    @foreach (var item in Model)
    {
        <tr class="hover">
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@Html.EnumDescription(item.Status)</td>
            <td>@item.TimeLengthDisplay</td>
@*            <td>@item.Integral</td>*@
            <td>@item.ClickCount</td>
            <td class="w150 align-center">
                <a class="edit" href="FormForUpdate?viewName=CourseItemForm&CourseId= @ViewBag.CourseId&id=@item.Id">修改</a> |
                <a class="edit" href="javascript:confirmDelete('CourseItem/Remove','id=@item.Id',showSubmitResult)">删除</a>
            </td>
        </tr>
    }
}

<script src="~/Assets/Js/Core/PureJsPagination.js"></script>
<script src="~/Assets/Js/Core/PureJsPaginationInitializer.js"></script>
<script type="text/javascript">
    p_listContainerId = "listTD";
</script>
