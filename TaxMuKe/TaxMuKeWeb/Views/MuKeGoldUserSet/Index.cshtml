@model BasicData.Domain.MuKeGlobalSet
@{
    ViewBag.Title = "E金会员设置";
    Layout = null;
}

<h2>E金会员设置</h2>

<link href="~/Assets/css/layout.css" rel="stylesheet" type="text/css" />
<link href="~/Assets/Plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<script src="~/Assets/Plugins/jquery/jquery-1.11.1.min.js"></script>


@using (Html.BeginForm("Save", "MuKeGoldUserSet", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table class="table tb-type2 nobdb" style="width: auto">
        <tbody>


        <tr class="noborder">
            <td><em>金额:</em></td>
            <td class="vatop rowform">
                <input type="text" class="txt" min="1" name="money" value="@Model.DecimalValue">
            </td>
            <td></td>
        </tr>

            <tr class="noborder">
                <td><em>购买显示标题:</em></td>
                <td class="vatop rowform">
                    <textarea name="title" rows="4" maxlength="128" cols="6">@Model.Title</textarea>
                </td>
                <td style="color: red; font-size: 12px;">此标题会在支付宝支付的时候显示</td>
            </tr>

            <tr class="noborder">
                <td><em>购买显现详细信息:</em></td>
                <td class="vatop rowform">
                    <textarea name="content" rows="4" maxlength="512" cols="6">@Model.Content</textarea>
                </td>
                <td></td>
            </tr>


        </tbody>
        <tfoot></tfoot>
    </table>

    <div style="height: 20px"></div>
    <input type="submit" class="btn" id="sub" value="保存"/>

}